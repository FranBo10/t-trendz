{% extends 'base.html.twig' %}

{% block title %}T-Trendz
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center w-50 mx-auto my-2">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container">
		<div class="row mt-5">
			{% for produit in produits %}
				<div class="col-md-6 col-lg-4" style="min-height: 500px">
					<div class="card border-info mb-3 card-height">
						<div class="row col-12">
							<div class="flex-column">
								<div class="col-4" style="min-width: 400px; padding: 20px">
									<img src="{{asset('uploads/images/' ~ produit.photo)}}" alt="{{ produit.titre }}" style="object-fit: cover" width="100%" height="auto"/>
								</div>
								<div class="card-body">
									<h3 class="card-header text-center">{{ produit.titre }}</h3>
									<h5 class="card-title my-3">
										{{ produit.description|raw }}
									</h5>
									<div class="text-center">
										<a href="{{ path('app_show', {id: produit.id}) }}" class="btn btn-primary">Voir d√©tails...</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>{% endblock %}
